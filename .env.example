# Photo Gallery Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SITE CONFIGURATION
# =============================================================================

# Production site URL (used for generating absolute URLs in meta tags)
SITE_URL=https://kristijan.lukacin.com

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Remote server settings
DEPLOY_REMOTE_USER=klukacin
DEPLOY_REMOTE_HOST=kristijan.lukacin.com
DEPLOY_REMOTE_ROOT=/home/klukacin/public_html
DEPLOY_SSH_PORT=22

# SSH Authentication - Choose ONE method:

# Option 1: SSH Key (recommended, more secure)
DEPLOY_SSH_KEY=~/.ssh/id_rsa

# Option 2: SSH Password (requires 'sshpass' to be installed)
# Uncomment and set if you prefer password authentication:
# DEPLOY_SSH_PASSWORD=your-password-here

# =============================================================================
# FILE PERMISSIONS
# =============================================================================
# Permissions applied during rsync sync operations.
#
# Common configurations:
#   Shared hosting (same user):  dirs=775, files=664, private=660
#   Apache/Nginx (www-data):     dirs=755, files=644, private=640

# Directory permissions (default: 775)
DEPLOY_CHMOD_DIRS=775

# File permissions (default: 664)
DEPLOY_CHMOD_FILES=664

# Private file permissions for index.md, body.md, .htaccess (default: 660)
DEPLOY_CHMOD_PRIVATE=660

# Optional: Set ownership after sync (e.g., user:www-data)
# Requires appropriate permissions on the server
# DEPLOY_CHOWN=klukacin:klukacin
