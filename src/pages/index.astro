---
export const prerender = true;
import SEO from '../components/SEO.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <SEO
    title="Welcome"
    description="Photography by Kristijan Lukačin - Welcome to my digital archives"
    image="/images/landing-bg.jpg"
    imageWidth={1920}
    imageHeight={1080}
  />
</head>
<body>
  <div class="landing">
    <div class="content">
      <h1>Kristijan Lukačin</h1>
      <p class="subtitle">Welcome</p>
      <a href="/home" class="shutter-button" id="shutter-btn">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
          <circle cx="12" cy="12" r="3"/>
        </svg>
        <span>Shutter</span>
      </a>
    </div>
  </div>

  <audio id="shutter-sound" preload="auto">
    <source src="/sounds/shutter.mp3" type="audio/mpeg">
  </audio>

  <script>
    const shutterBtn = document.getElementById('shutter-btn');
    const shutterSound = document.getElementById('shutter-sound');

    shutterBtn?.addEventListener('click', (e) => {
      e.preventDefault();

      // Try to play sound, but don't block navigation if it fails
      try {
        shutterSound?.play();
      } catch (error) {
        console.log('Could not play shutter sound:', error);
      }

      setTimeout(() => {
        window.location.href = '/home';
      }, 200);
    });
  </script>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body, html {
      height: 100%;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    }

    .landing {
      height: 100vh;
      background-image: url('/images/landing-bg.jpg');
      background-size: cover;
      background-position: top center;
      background-repeat: no-repeat;
      background-color: #2c3e50;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
    }

    .landing::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.4);
    }

    .content {
      position: relative;
      z-index: 1;
      text-align: center;
      color: white;
    }

    h1 {
      font-size: 4rem;
      font-weight: 300;
      margin-bottom: 1rem;
      text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
      letter-spacing: 2px;
    }

    .subtitle {
      font-size: 1.5rem;
      font-weight: 300;
      margin-bottom: 3rem;
      text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.7);
      opacity: 0.9;
    }

    .shutter-button {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      padding: 1rem 2.5rem;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-radius: 50px;
      color: white;
      text-decoration: none;
      font-size: 1.25rem;
      font-weight: 400;
      transition: all 0.3s ease;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    .shutter-button:hover {
      background: rgba(255, 255, 255, 0.2);
      border-color: rgba(255, 255, 255, 0.5);
      transform: scale(1.05);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
    }

    .shutter-button:active {
      transform: scale(0.95);
    }

    .shutter-button svg {
      width: 28px;
      height: 28px;
      fill: currentColor;
    }

    @media (max-width: 768px) {
      h1 {
        font-size: 2.5rem;
      }

      .subtitle {
        font-size: 1.2rem;
        margin-bottom: 2rem;
      }

      .shutter-button {
        padding: 0.75rem 2rem;
        font-size: 1.1rem;
      }

      .shutter-button svg {
        width: 24px;
        height: 24px;
      }
    }
  </style>
</body>
</html>
